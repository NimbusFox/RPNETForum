@model Tuple<bool, bool, string>
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <form class="well col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2" action="~/Login" method="POST">
        <h3>Login</h3><br><br>
        <div class="row">
            <div class="col-xs-3 control-label">Username</div>
            <div class="col-xs-9">
                <div class="form-group @Html.Raw(Model.Item1 ? "" : "has-error")">
                    <input name="username" class="form-control" value="@Model.Item3"><span class="control-label">@Html.Raw(Model.Item1 ? !Model.Item2 ? "Please Verify your account before logging in" : "" : "Incorrect username or password")</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3 control-label">Password</div>
            <div class="col-xs-9">
                <div class="form-group @Html.Raw(Model.Item1 ? "" : "has-error")">
                    <input name="password" type="password" class="form-control"><span class="control-label"></span>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-success pull-right" value="Login"><br><br>
    </form>
</div>